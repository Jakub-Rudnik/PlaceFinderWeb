@page
@model PlaceFinderWeb.Pages.Places.Delete

@{
    Layout = "Shared/_Layout";
}

<div class="p-5 md:p-0 w-full flex justify-center">
    <form method="post" enctype="multipart/form-data">
        <div class="flex flex-col mt-5 gap-6 items-start">
            <h2 class="text-2xl md:text-3xl font-bold">Are you sure to delete this place?</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Place.Id" class="input">
                    
            <button class="btn" type="submit">
                Delete place
            </button>
        </div>
    </form>
</div>