@page
@model PlaceFinderWeb.Pages.AddPlace

@{
    Layout = "Shared/_Layout";
}

<div class="flex flex-col items-center justify-top gap-6 py-10">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Dodaj miejsce</h2>
    <form class="flex flex-col gap-10 w-full max-w-96" method="post">
        @* <div> *@
        @*     <label for="Id" class="block text-sm font-medium leading-6 text-gray-900">Id</label> *@
        @*     <div class="mt-2"> *@
        @*         <input id="Id" name="id" type="number" required class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6 outline-none"> *@
        @*     </div> *@
        @* </div> *@
        <div>
            <label for="Name" class="block text-sm font-medium leading-6 text-gray-900">Nazwa</label>
            <div class="mt-2">
                <input id="Name" name="name" type="text" required class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6 outline-none">
            </div>
        </div>
        <div>
            <label for="Description" class="block text-sm font-medium leading-6 text-gray-900">Opis</label>
            <div class="mt-2">
                <input id="Description" name="description" type="text" required class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6 outline-none">
            </div>
        </div>
        <div>
            <label for="Latitude" class="block text-sm font-medium leading-6 text-gray-900">Szerokość geograficzna</label>
            <div class="mt-2">
                <input id="Latitude" name="latitude" type="text" required class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6 outline-none">
            </div>
        </div>
        <div>
            <label for="Longitude" class="block text-sm font-medium leading-6 text-gray-900">Długość geograficzna</label>
            <div class="mt-2">
                <input id="Longitude" name="longitude" type="text" required class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6 outline-none">
            </div>
        </div>
        <div>
            <label for="ImageUrl" class="block text-sm font-medium leading-6 text-gray-900">Ściżka obrazu</label>
            <div class="mt-2">
                <input id="ImageUrl" name="imageurl" type="text" required class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6 outline-none">
            </div>
        </div>
        <button type="submit" class="flex w-full justify-center rounded-xl bg-red-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600">Dodaj miejsce</button>
    </form>
    <a class="flex max-w-96 justify-center rounded-xl bg-red-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" id="testPlacesBtn">Dodaj testowe miejsca</a>
</div>

<script>
    const testPlacesBtn = document.querySelector("#testPlacesBtn");
    
    testPlacesBtn.addEventListener("click", (e) => {
        fetch("/TestPlaces", {
            method: "POST"
        }).then(response => {
            if (response.ok) {
                window.location.href = "/";
            }
        });
    });
</script>