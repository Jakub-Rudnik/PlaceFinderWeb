@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="contextMenu" class="hidden flex-col p-2 min-w-40 max-w-64 bg-white rounded-xl fixed z-[5000] border-2 border-gray-30">
    <div class="flex hover:bg-gray-100 rounded-lg px-5 py-2 hover:cursor-pointer w-full" >Dodaj miejsce</div>
    <div class="flex hover:bg-gray-100 rounded-lg px-5 py-2 hover:cursor-pointer w-full" >48.8584, 2.2945</div>
</div>

<div id="map" class="h-full w-full"></div>
<div class="fixed bottom-0 z-[1000] w-full bg-white rounded-t-[20px] flex flex-col border-gray-300 border-t-2 transition-transform placesModal"  id="placesModal">
    <div class="flex w-full items-center justify-center hover:bg-gray-100 hover:cursor-pointer" id="showHidePlaces" data-open="1" title="Otwórz/Zamknij panel z miejscami">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 transition-transform" id="arrowIcon">
            <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
        </svg>
    </div>
    <div class="w-full overflow-auto" id="placesContainer">
        <div class="h-max sm:h-auto w-full sm:w-max flex flex-col sm:flex-row items-center justify-center gap-5 p-5" >
            @foreach (var place in Model.Places)
            {
                <div class="flex flex-col flex-1 md:flex-row w-full sm:max-w-96 items-right justify-center gap-4 focus:ring-red-600 rounded-xl border-2 border-gray-300 p-4 hover:cursor-pointer hover:bg-gray-100 transition place ring-offset-2 focus:ring-2 focus:ring-inset" data-latitude="@place.Latitude" data-longitude="@place.Longitude" data-popup="@place.Id">
                    <img src="@place.ImageUrl" class="h-24 w-full md:w-32 object-cover rounded-lg">
                    <div class="flex flex-col justify-between gap-4">
                        <div class="flex flex-col items-start justify-right">
                            <h2 class="text-xl font-bold">@place.Name</h2>
                            <p class="m-none text-sm line-clamp-2">@place.Description</p>
                        </div>
                        <div class="flex gap-4">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125"/>
                            </svg>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-red-600">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/>
                            </svg>
        
                        </div>
                    </div>
                </div>                
            }
        </div>
    </div>
</div>

<script>
    const places = @Html.Raw(Json.Serialize(Model.Places));
</script>

<script src="~/js/indexPage.js" asp-append-version="true" type="module"></script>
