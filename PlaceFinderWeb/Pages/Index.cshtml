@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="map" class="h-full w-full"></div>

<script>
    let map = L.map('map').setView([50.667730, 17.928600], 13);

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);

   @foreach (var place in Model.Places)
   {
       <text>
            L.marker([@place.Latitude, @place.Longitude]).addTo(map)
            .bindPopup(`
                <div class="flex flex-col items-right justify-center gap-4 w-full">
                <img src="@place.ImageUrl" class="w-full h-32 object-cover rounded-lg">
                <h2 class="text-xl font-bold">@place.Name</h2>
                <p class="m-none">@place.Description</p>
                </div>
            `);
        </text>
   }
</script>